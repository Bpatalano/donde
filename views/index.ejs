      <input  type = "text" ng-model = "newQuery.city" placeholder = "City Name"/>
      <script language="javascript">populateCountries("country", "state"); </script>
      <button ng-click = "query(newQuery)" > Â¿Donde? </button>
      <ul>
        <li ng-repeat = "results in result.data">
          <h3>{{results.title}} </h3>
          <div>{{results.subpods[0].text}}</div>
          <img ng-src= "{{results.subpods[0].image}}"> </img>
        </li>
      </ul>
    </div>
</body>
</html>
